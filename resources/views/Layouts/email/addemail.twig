            {%  include'template/inputs.twig' with  {'inpid' :  'mcp1' , 'inptype': 'password','labid':'mcp_1' ,'lab':'Password','inpname':'pass','validate':true , 'required' :true ,'tip_data' : 'Password Must Contains atleast one letter , one number , one symbol and have minimum 10 charcters length ','tip_dir' :'right' } %}
