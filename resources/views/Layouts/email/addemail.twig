
{% extends ['template/head.twig','template/spaces.twig'] %}

{% block page_tittle %}Email{% endblock %}
 {% block content %}
     {%  include'template/navigation.twig' with  {'navlink' : 'true' } %}
     {% block bottom_20 %} &nbsp;  {% endblock %}
     <div class="subtitle">Add A Email Address</div>
     {{ block ('bottom_20') }}
    <form action="/email/manage" style="text-align: -webkit-center;" method="post">
        <div >
            <div >
                {%  include'template/inputs.twig' with  {'inpid' :  'inp_add' , 'inptype': 'text' ,'lab':'User','inpname':'name', 'required' :true,'rightaddon':'true','addontext': '@' ~ result.domain ,'tip_data' :  '@' ~ result.domain ,'tip_dir' :'right' } %}
            </div>
